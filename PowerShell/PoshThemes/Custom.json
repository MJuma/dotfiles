{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": false,
    "osc99": true,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "root",
                    "style": "plain",
                    "foreground": "yellow",
                    "background": "red",
                    "properties": {
                        "root_icon": "тЪб"
                    }
                },
                {
                    "type": "exit",
                    "style": "plain",
                    "foreground": "red",
                    "background": "yellow",
                    "properties": {
                        "error_icon": "тип"
                    }
                },
                {
                    "type": "path",
                    "style": "diamond",
                    "trailing_diamond": "\uE0B0",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "white",
                    "background": "blue",
                    "properties": {
                        "style": "full"
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "black",
                    "background": "green",
                    "properties": {
                        "display_status": true,
                        "display_stash_count": true,
                        "branch_icon": "\uE0A0 ",
                        "status_separator_icon": " | ",
                        "local_working_icon": "",
                        "local_staged_icon": "",
                        "stash_count_icon": "\uF692 "
                    }
                },
                {
                    "type": "executiontime",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "white",
                    "background": "red",
                    "properties": {
                        "threshold": 500,
                        "style": "austin"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "time",
                    "style": "powerline",
                    "foreground": "white",
                    "background": "blue",
                    "powerline_symbol": "\uE0B2",
                    "invert_powerline": true,
                    "properties": {
                        "time_format": "15:04:05"
                    }
                },
                {
                    "type": "time",
                    "style": "powerline",
                    "foreground": "black",
                    "background": "green",
                    "powerline_symbol": "\uE0B2",
                    "invert_powerline": true,
                    "properties": {
                        "time_format": "Mon Jan. _2 2006"
                    }
                },
                {
                    "type": "session",
                    "style": "powerline",
                    "foreground": "white",
                    "background": "blue",
                    "properties": {
                        "prefix": "<blue,green>\uE0B2</> "
                    }
                }
            ]
        },
        {
            "type": "newline"
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "exit",
                    "style": "plain",
                    "foreground": "blue",
                    "properties": {
                        "prefix": "\u276F",
                        "always_enabled": true,
                        "error_color": "#FF5252",
                        "display_exit_code": false
                    }
                }
            ]
        }
    ]
}
