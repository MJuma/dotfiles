! Bold, Italic, Underline
*.colorBD:     #d9d9d9
!*.colorIT:
!*.colorUL:

! ------------------------------------------------------------------------------
! URxvt Settings
! ------------------------------------------------------------------------------
! scrollbar style - rxvt (default), plain (most compact), next, or xterm
URxvt.scrollstyle: rxvt
URxvt.secondaryScroll:  True
URxvt.scrollBar: false
!URxvt.font: xft:monospace:size=10
URxvt.geometry: 85x25
URxvt.saveLines: 8192
URxvt.visualBell: true
URxvt*termName: rxvt

URxvt.perl-ext-common:  default,matcher,vtwheel
URxvt.urlLauncher:      firefox
URxvt.matcher.button:   1

!URxvt.transparent:true
URxvt.background:  #d9d9d9
URxvt.foreground:  #353a44
URxvt.cursorColor: #d9d9d9

URxvt*font:                 xft:Noto Mono for Powerline:regular:size=12
URxvt*imFont:               xft:Noto Mono for Powerline:regular:size=12
URxvt*boldFont:             xft:Noto Mono for Powerline:bold:size=12
URxvt*italicFont:           xft:Noto Mono for Powerline:italic:size=12
URxvt*boldItalicFont:       xft:Noto Mono for Powerline:bold:italic:size=12

!black
